@using MovieLand_Models
@model Movie

@{
    ViewData["Title"] = "Détails";
}


<div class="row actions-container center mb-5">
    <div class="col-1">
        <a asp-action="Index"><i class="bi bi-arrow-left-circle-fill text-white" title="Retour à la liste"></i></a>
    </div>
    <div class="col-1">
        <a asp-action="Edit" asp-route-id="@Model.MovieId"><i class="bi bi-pencil-fill text-white" title="Modifier le film"></i></a>
    </div>
</div>
<div class="row movie-container justify-content-center align-items-center">
    <div class="col-2 movie-image-wrapper" id="@Model.MovieId">
        <div class="card border-0 h-100" style="width:100%;">
            <img class="card-img-top" src="https://image.tmdb.org/t/p/w185_and_h278_multi_faces/@(Model.Poster)" alt="@Model.Title">
        </div>
    </div>
    <div class="col-6 movie-infos-wrapper" id="@Model.MovieId">
        <div class="row">
            <div class="col-12 title">
                <span class="name">@Model.Title</span> <span class="year">(@Model.ReleaseYear)</span>
            </div>
            <div class="col-12 infos">
                <div class="runtime"><span class="label">Durée:</span> <span class="value">@Model.Runtime</span></div>
            </div>
        </div>
    </div>
</div>